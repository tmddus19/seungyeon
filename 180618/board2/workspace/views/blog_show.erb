<div class="jumbotron">
  <h1 class="display-4"><%= @blog.title %></h1>
  <p class="lead"><%= @blog.content %></p>
  <img src="<%= @blog.image_url %>">
  <hr class="my-4">
  <p><%= @blog.tag %></p>
  <p>작성일자: <%= @blog.created_at %></p>
  <a class="btn btn-primary btn-lg" href="/blogs/edit/<%= @blog.id %>" role="button">수정</a>
  <a class="btn btn-danger btn-lg" href="/blogs/destroy/<%= @blog.id %>" role="button">삭제</a>
</div>





